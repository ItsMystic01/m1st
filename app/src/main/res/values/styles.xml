<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainAppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor" xmlns:tools="http://schemas.android.com/tools">@color/gray_text</item>
    </style>

    <style name="BottomNavigation" parent="Theme.Material3.DayNight">
        <item name="backgroundTint">#B4A592</item>
        <item name="tintMode">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>
    
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeErrorColor">@color/light_gray_text</item>
        <item name="helperText">* Required</item>
        <item name="helperTextTextColor">#CFD8DC</item>
        <item name="boxBackgroundColor">@color/gray_text</item>
        <item name="hintTextColor">@color/light_gray_text</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/error</item>
        <item name="errorTextColor">#CFD8DC</item>
        <item name="errorIconTint">@color/white</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="SongToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="android:insetTop">3dp</item>
        <item name="android:insetBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minWidth">72dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SongButtona" parent="Widget.Material3.Button.Icon">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="strokeColor">@color/white</item>
    </style>


</resources>